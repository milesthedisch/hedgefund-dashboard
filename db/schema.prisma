generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id               Int                @id @default(autoincrement())
  auth0UserId      String             @unique
  initalInvestment Int
  transactions     UserTransactions[]
}

model UserTransactions {
  id            Int             @id @default(autoincrement())
  type          TransactionType @default(PURCHASE)
  units         Decimal         @default(0.00) @db.Decimal(10, 2)
  unitPrice     Decimal         @db.Decimal(9, 6)
  audInvestment Decimal         @db.Decimal(15, 2)
  datetime      DateTime        @default(now())
  fee           Decimal         @default(0.010000) @db.Decimal(9, 6)
  user          User            @relation(fields: [userId], references: [id])
  userId        Int

  @@index([userId])
}

model Strategies {
  id                   Int                    @id @default(autoincrement())
  name                 String                 @unique
  strategyTransactions StrategyTransactions[]
}

model StrategyTransactions {
  id         String     @unique @default(uuid())
  datetime   DateTime   @default(now())
  balance    Decimal    @default(0.000000000000000000000000000000)
  strategyId Int
  strategy   Strategies @relation(fields: [strategyId], references: [id])
}

model ProductionSharePrice {
  datetime DateTime @unique @default(now())
  price    Decimal  @default(0.000000) @db.Decimal(9, 6)
}

enum TransactionType {
  REDEMPTION
  PURCHASE
}
